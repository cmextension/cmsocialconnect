	<license>GNU General Public License version 2 or later</license>
	<description>PLG_CMSOCIALCONNECT_FACEBOOK_XML_DESCRIPTION</description>

	<files>
		<folder>language</folder>
		<folder>layouts</folder>
		<filename plugin="facebook">facebook.php</filename>
		<filename>facebook.xml</filename>
	</files>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="info" type="spacer" class="text"
					label="PLG_CMSOCIALCONNECT_FACEBOOK_INFO" />

				<field name="app_id" type="text" required="true"
					label="PLG_CMSOCIALCONNECT_FACEBOOK_APP_ID_LABEL"
					description="PLG_CMSOCIALCONNECT_FACEBOOK_APP_ID_DESC" />

				<field name="app_secret" type="text" required="true"
					label="PLG_CMSOCIALCONNECT_FACEBOOK_APP_SECRET_LABEL"
					description="PLG_CMSOCIALCONNECT_FACEBOOK_APP_SECRET_DESC" />
			</fieldset>
		</fields>
	</config>
</extension>
